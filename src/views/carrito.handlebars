<section class="cart-page">
  <h1>Carrito</h1>

  <div id="cart-empty" class="muted" style="display:none">Tu carrito está vacío.</div>
  <ul id="cart-list" class="cart-grid"></ul>

  <div id="cart-summary" class="cart-summary" style="display:none">
    <p>Total ítems: <strong id="cart-items-count">0</strong></p>
    <p>Total a pagar: <strong id="cart-total">$ 0</strong></p>
    <div class="cart-actions">
      <button id="cart-clear">Vaciar carrito</button>
      <button id="cart-checkout">Comprar</button>
    </div>
    <p id="cart-msg" class="ok"></p>
  </div>
</section>
